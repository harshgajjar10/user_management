var bookId = '<%= @book.id%>'

function toggleLikeButton(bookId, favoritedBook) {
  let likeButton = document.querySelector(`.like-icon[data-id='${bookId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedBook)
  }
  else {
    document.querySelector(`.favorite[data-id='${bookId}']`).remove()
  }
}

toggleLikeButton(bookId, '<%= j render "books/book", book: @book %>');
