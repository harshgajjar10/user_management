<% if user_signed_in? %>
  <% if admin? %>
    <%= link_to new_author_path, class: "btn btn-outline-primary" do %>
      <% 'New Author' %>
    <% end %>
  <% end %>
  <br>
  <br>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= 'Author Name' %></th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each_with_index do |author,index| %>
        <tr>
          <%= page_index(params[:page], index) %>
          <td><%= author.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
